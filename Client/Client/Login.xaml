<Window x:Class="Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://api.time.com/wp-content/uploads/2019/08/caveman-spongebob-spongegar.png"/>
        </Grid.Background>
        <Button Content="Login" HorizontalAlignment="Left" Margin="650,238,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="595,133,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="152" Height="19"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="595,178,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="152" Height="19"/>
        <Button Content="return" HorizontalAlignment="Left" Margin="45,71,0,0" VerticalAlignment="Top" Click="returnToMain"/>
        <TextBlock x:Name="notify" HorizontalAlignment="Left" Margin="110,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="308" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>
