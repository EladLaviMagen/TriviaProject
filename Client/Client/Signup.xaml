<Window x:Class="Client.Signup"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://cdn.quotesgram.com/small/50/29/223311417-gangsta-spongebob-jpg.jpg"/>
        </Grid.Background>
        <Button Content="sign up" HorizontalAlignment="Left" Margin="650,260,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="595,133,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="152" Height="19"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="595,178,0,0" TextWrapping="Wrap" Text="password" VerticalAlignment="Top" Width="152" Height="19"/>
        <TextBox x:Name="mail" HorizontalAlignment="Left" Margin="595,217,0,0" TextWrapping="Wrap" Text="mail" VerticalAlignment="Top" Width="152" Height="19"/>
        <Button Content="return" HorizontalAlignment="Left" Margin="45,71,0,0" VerticalAlignment="Top" Click="returnToMain"/>
    </Grid>
</Window>
